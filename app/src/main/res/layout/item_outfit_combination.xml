<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_margin="8dp"
    android:background="@drawable/card_white_rounded"
    android:gravity="center"
    android:elevation="4dp">

    <!-- âž• Center Plus Button -->
    <ImageView
        android:id="@+id/img_plus"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_plus"
        android:background="@drawable/circle_gray_background"
        android:scaleType="centerInside"
        android:padding="12dp" />

    <!-- ðŸ·ï¸ Title below the button -->
    <TextView
        android:id="@+id/text_outfit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Outfit Combinations"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="12dp" />

    <!-- â„¹ï¸ Subtitle text -->
    <TextView
        android:id="@+id/text_outfit_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap to view"
        android:textSize="14sp"
        android:textColor="#888888"
        android:layout_marginTop="4dp" />

</LinearLayout>

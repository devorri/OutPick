<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutCreateCloset"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:gravity="center_horizontal"
    android:background="@drawable/card_white_rounded"
    android:elevation="4dp">

    <!-- White circle with white border -->
    <FrameLayout
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/ic_white"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/imageCreateCloset"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_create_closet"
            android:scaleType="fitCenter"
            android:contentDescription="Create Closet Icon"
            android:padding="3dp" />
    </FrameLayout>

    <!-- Label text -->
    <TextView
        android:id="@+id/textCreateCloset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a Closet"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="16sp"
        android:gravity="center" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutCreateOutfit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".admin.UserAdminCreateOutfitActivity">

    <!-- ðŸŸ¦ Top Bar -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#F5F5F5"
        android:paddingHorizontal="12dp"
        android:elevation="4dp">

        <!-- Back Button (left) -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back" />

        <!-- Title (center) -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Outfit"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_centerInParent="true" />

        <!-- Workspace Button (right, before 3-dot) -->
        <ImageButton
            android:id="@+id/btn_workspace"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="52dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_workspace"
            android:contentDescription="Workspace" />

        <!-- 3-Dot Menu Icon (rightmost) -->
        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_more_vert"
            android:contentDescription="Menu" />
    </RelativeLayout>

    <!-- ðŸŸ© RecyclerView only (no ScrollView) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewOutfitItems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:padding="16dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        tools:listitem="@android:layout/simple_list_item_1" />

</RelativeLayout>

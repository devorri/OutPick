<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@android:color/white">

        <!-- FrameLayout to hold image and checkbox overlay -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <!-- Clothing Image -->
            <ImageView
                android:id="@+id/clothing_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:contentDescription="Clothing Image"
                android:background="@drawable/border_gray_rounded" />

            <!-- Top-left checkbox -->
            <CheckBox
                android:id="@+id/checkbox_selection"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="top|start"
                android:layout_margin="8dp"
                android:buttonTint="@color/black"
                android:background="@drawable/circle_background"
                android:visibility="gone" />
        </FrameLayout>

        <!-- Category Text -->
        <TextView
            android:id="@+id/clothing_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:layout_marginTop="8dp"
            android:layout_marginStart="6dp" />

        <!-- Season Text -->
        <TextView
            android:id="@+id/clothing_season"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Season"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="6dp" />

        <TextView
            android:id="@+id/clothing_occasion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Occasion"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:layout_marginTop="8dp"
            android:layout_marginStart="6dp" >
        </TextView>


    </LinearLayout>
</androidx.cardview.widget.CardView>

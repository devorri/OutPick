<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Top Bar -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_back"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Outfit ideas"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#0B1223"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <!-- Increased touch target to 48dp by wrapping in 48dp container -->
        <ImageButton
            android:id="@+id/btnMoreOptions"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:contentDescription="More Options"
            app:tint="#000000"
            android:src="@drawable/ic_more_vert" />
    </RelativeLayout>

    <!-- Snapshot ImageView (hidden by default) -->
    <ImageView
        android:id="@+id/snapshotImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_below="@id/top_bar"
        android:layout_margin="12dp"
        android:visibility="gone" />

    <!-- RecyclerView for outfit snapshots -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/outfit_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:layout_above="@id/bottomBar"
        android:padding="12dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <!-- Modern bottom action bar styled like the screenshot -->
    <include
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        layout="@layout/bottom_bar_outfit_combination" />

    <!-- Circular Customize Button -->
    <ImageButton
        android:id="@+id/button_customize"
        android:layout_width="74dp"
        android:layout_height="73dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/circle_button_background"
        android:contentDescription="@string/filter_button"
        android:padding="12dp"
        android:src="@drawable/ic_filter2"
        app:tint="#FFFFFF" />


</RelativeLayout>

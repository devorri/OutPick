<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:flexbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_filter_bottom_sheet"
    android:padding="24dp"
    android:elevation="12dp">

    <!-- Title Row: Reset All + Filter + Close Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <!-- Reset All Text -->
        <TextView
            android:id="@+id/resetAllText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset All"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingStart="4dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Center Filter Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Filter"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- Close Icon -->
        <ImageView
            android:id="@+id/closeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Close"
            android:padding="4dp"
            android:src="@drawable/ic_close" />
    </LinearLayout>

    <!-- Occasions Title -->
    <TextView
        android:id="@+id/occasionsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Occasions"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        android:paddingBottom="8dp" />

    <!-- Occasion Buttons -->
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/occasionChipsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        flexbox:flexWrap="wrap"
        flexbox:justifyContent="flex_start">

        <!-- Occasion Buttons (Daily, Work, Date, etc.) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDaily"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Daily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textAllCaps="false"
            app:cornerRadius="50dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/light_gray"
            app:backgroundTint="@android:color/white"
            android:textColor="@android:color/black"
            android:layout_margin="6dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWork"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textAllCaps="false"
            app:cornerRadius="50dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/light_gray"
            app:backgroundTint="@android:color/white"
            android:textColor="@android:color/black"
            android:layout_margin="6dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDate"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textAllCaps="false"
            app:cornerRadius="50dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/light_gray"
            app:backgroundTint="@android:color/white"
            android:textColor="@android:color/black"
            android:layout_margin="6dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFormal"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Formal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textAllCaps="false"
            app:cornerRadius="50dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/light_gray"
            app:backgroundTint="@android:color/white"
            android:textColor="@android:color/black"
            android:layout_margin="6dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTravel"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Travel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textAllCaps="false"
            app:cornerRadius="50dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/light_gray"
            app:backgroundTint="@android:color/white"
            android:textColor="@android:color/black"
            android:layout_margin="6dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHome"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textAllCaps="false"
            app:cornerRadius="50dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/light_gray"
            app:backgroundTint="@android:color/white"
            android:textColor="@android:color/black"
            android:layout_margin="6dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnParty"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Party"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textAllCaps="false"
            app:cornerRadius="50dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/light_gray"
            app:backgroundTint="@android:color/white"
            android:textColor="@android:color/black"
            android:layout_margin="6dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSport"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Sport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textAllCaps="false"
            app:cornerRadius="50dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/light_gray"
            app:backgroundTint="@android:color/white"
            android:textColor="@android:color/black"
            android:layout_margin="6dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSpecial"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Special"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textAllCaps="false"
            app:cornerRadius="50dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/light_gray"
            app:backgroundTint="@android:color/white"
            android:textColor="@android:color/black"
            android:layout_margin="6dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSchool"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="School"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textAllCaps="false"
            app:cornerRadius="50dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/light_gray"
            app:backgroundTint="@android:color/white"
            android:textColor="@android:color/black"
            android:layout_margin="6dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBeach"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Beach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textAllCaps="false"
            app:cornerRadius="50dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/light_gray"
            app:backgroundTint="@android:color/white"
            android:textColor="@android:color/black"
            android:layout_margin="6dp" />
    </com.google.android.flexbox.FlexboxLayout>

    <!-- Spacer - kept for structural spacing intent -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

    <!-- Season Section Title -->
    <TextView
        android:id="@+id/textSeasonLabelLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seasons"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        android:paddingBottom="8dp" />

    <!-- Season Buttons (Updated to El Ni単o and La Ni単a) -->
    <LinearLayout
        android:id="@+id/seasonGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        android:layout_marginTop="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLaNina"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="La Ni単a"
            android:textSize="13sp"
            android:textAllCaps="false"
            app:strokeWidth="2dp"
            app:cornerRadius="50dp"
            app:strokeColor="@color/light_gray"
            app:backgroundTint="@android:color/white"
            android:textColor="@android:color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnElNino"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="El Ni単o"
            android:textSize="13sp"
            android:textAllCaps="false"
            app:cornerRadius="50dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/light_gray"
            app:backgroundTint="@android:color/white"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Apply Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnApplyFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apply"
        android:textColor="@android:color/white"
        app:backgroundTint="@android:color/black"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:padding="12dp" />

</LinearLayout>

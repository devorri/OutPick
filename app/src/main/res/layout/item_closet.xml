<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- â˜° Three-dot menu in top right -->
        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Menu"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:padding="6dp"
            android:visibility="gone" />

        <!-- Main content vertically centered -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/btnMenu"
            android:gravity="center_horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <!-- ðŸ–¼Closet Image -->
            <ImageView
                android:id="@+id/imageClothing"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background_white"
                android:padding="4dp"
                android:adjustViewBounds="true"
                android:contentDescription="Closet Image" />

            <!-- Closet Title -->
            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Closet Title"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginTop="4dp" />

            <!-- Subtext like '1 item' -->
            <TextView
                android:id="@+id/textSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 item"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="6dp"
                android:gravity="center"
                android:visibility="visible" />

            <!-- Add button (optional / hidden for now) -->
            <ImageButton
                android:id="@+id/btnAdd"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/circle_background_gray"
                android:src="@drawable/ic_plus"
                android:scaleType="centerInside"
                android:padding="6dp"
                android:contentDescription="Add"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF"
    android:gravity="center_horizontal">

    <!-- ðŸ”™ Back + Title Centered -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:contentDescription="Back"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Item"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <!-- Camera Button Centered -->
    <LinearLayout
        android:id="@+id/btnCamera"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:background="@drawable/bg_gray_rounded"
        android:gravity="center"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_camera1"
            app:tint="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camera"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- Extra Camera ImageButton (Optional) -->

    <!-- Album Button Centered Under Camera -->
    <LinearLayout
        android:id="@+id/btnAlbum"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:background="@drawable/bg_gray_rounded"
        android:gravity="center"
        android:padding="12dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_album"
            app:tint="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Album"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Optional Suggestion Text (still hidden) -->
    <TextView
        android:id="@+id/txtSuggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Suggested outfit will appear here"
        android:textSize="16sp"
        android:textColor="#444444"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:visibility="gone" />

</LinearLayout>

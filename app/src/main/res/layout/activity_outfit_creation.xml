<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_background">

    <!-- Top Bar -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Outfit Creation"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#0B1223" />
    </RelativeLayout>

    <!-- Workspace -->
    <FrameLayout
        android:id="@+id/workspace"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/add_item_button"
        android:layout_below="@id/top_bar"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_margin="16dp" />

    <!-- Global Control Buttons -->
    <LinearLayout
        android:id="@+id/global_control_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/rounded_button_border"
            android:src="@drawable/ic_close"
            android:scaleType="centerInside"
            android:contentDescription="Close"
            android:padding="10dp"
            app:tint="#000000"
            android:layout_marginBottom="12dp" />

        <ImageButton
            android:id="@+id/btnZoomIn"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/rounded_button_border"
            android:src="@drawable/ic_zoom_in"
            android:scaleType="centerInside"
            android:contentDescription="Zoom In"
            android:padding="10dp"
            app:tint="#000000"
            android:layout_marginBottom="12dp" />

        <ImageButton
            android:id="@+id/btnZoomOut"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/rounded_button_border"
            android:src="@drawable/ic_zoom_out"
            android:scaleType="centerInside"
            android:contentDescription="Zoom Out"
            android:padding="10dp"
            app:tint="#000000" />
    </LinearLayout>

    <!-- Add Item / Save Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_item_button"
        android:layout_width="380dp"
        android:layout_height="73dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:backgroundTint="#FFFFFF"
        android:text="Add Item"
        android:textColor="#000000"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        app:strokeColor="#000000"
        app:strokeWidth="2dp" />

    <!-- Add More Items Floating Button -->
    <ImageView
        android:id="@+id/btn_add_more_items"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_above="@id/add_item_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:background="@drawable/bg_circle_white"
        android:src="@drawable/ic_add"
        android:scaleType="center"
        android:contentDescription="Add More Items" />
</RelativeLayout>

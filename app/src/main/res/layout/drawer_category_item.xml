<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <!-- Header (Icon, Title, See All Button) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <!-- ðŸ‘• Category Icon: Uses app:tint and categoryIcon ID -->
        <ImageView
            android:id="@+id/categoryIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="Category icon"
            app:tint="@android:color/black"
            tools:src="@drawable/ic_shirt" />

        <TextView
            android:id="@+id/categoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/categoryIcon"
            android:layout_marginStart="8dp"
            android:text="Category Title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- NOTE: The ID is now 'seeAllButton' -->
        <Button
            android:id="@+id/seeAllButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:text="See All"
            android:textSize="12sp"
            android:textAllCaps="false"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="@android:color/holo_blue_dark" />

    </RelativeLayout>

    <!-- Horizontal Scrollable List of Items -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/clothingItemsContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Placeholder Item 1 -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_square_bg"
                android:scaleType="centerInside"
                android:tag="top_item"
                tools:src="@drawable/top_test3"
                android:contentDescription="Clothing item thumbnail" />

            <!-- Placeholder Item 2 -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_square_bg"
                android:scaleType="centerInside"
                android:tag="bottom_item"
                tools:src="@drawable/bottom_test2"
                android:contentDescription="Clothing item thumbnail" />

            <!-- Placeholder Item 3 -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_square_bg"
                android:scaleType="centerInside"
                android:tag="shoe_item"
                tools:src="@drawable/shoe_test"
                android:contentDescription="Clothing item thumbnail" />

            <!-- Placeholder Item 4 -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_square_bg"
                android:scaleType="centerInside"
                android:tag="accessory_item"
                tools:src="@drawable/accessory_test1"
                android:contentDescription="Clothing item thumbnail" />

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>

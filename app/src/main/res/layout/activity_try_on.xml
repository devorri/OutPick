<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".outfits.TryOnActivity">

    <!-- Primary Content Area (Mannequin, Clothes, Buttons) -->
    <!-- The FrameLayout container is simplified to a LinearLayout for standard UI stacking -->
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white">

        <!-- Top Bar with Back and Open Drawer Buttons -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back"
                android:contentDescription="Back" />

            <TextView
                android:id="@+id/top_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Try On"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_centerInParent="true" />

            <!-- Button to open the clothes drawer -->
            <ImageView
                android:id="@+id/btnOpenDrawer"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="4dp"
                android:src="@drawable/ic_menu_drawer"
                android:contentDescription="Open Clothes Drawer" />
        </RelativeLayout>

        <!--  Mannequin + Clothes Layer (Main Interaction Area) -->
        <FrameLayout
            android:id="@+id/try_on_frame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipChildren="false"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <!-- CRITICAL FIX 1: Mannequin is now a standard ImageView. -->
            <ImageView
                android:id="@+id/avatarImage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/avatar"
                android:contentDescription="Avatar Mannequin"
                tools:src="@drawable/avatar_front" />

            <!-- CRITICAL FIX 2: All fixed clothing ImageViews have been removed from here.
                 They will be added dynamically by the Java code. -->

        </FrameLayout>

        <!-- Buttons -->
        <Button
            android:id="@+id/btnWearOutfit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wear Outfit (Save)"
            android:layout_margin="8dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnRemoveAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remove All Clothes"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnRemoveOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selective Remove"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@android:color/darker_gray"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- Navigation Drawer (Clothes Drawers) -->
    <RelativeLayout
        android:id="@+id/left_drawer_content"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        android:padding="16dp">

        <TextView
            android:id="@+id/drawerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Items"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/drawerTitle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- CRITICAL FIX 3: Removed non-standard 'app:' attributes for dynamic setup. -->
                <include layout="@layout/drawer_category_item"
                    android:id="@+id/drawer_tops" />

                <include layout="@layout/drawer_category_item"
                    android:id="@+id/drawer_bottoms" />

                <include layout="@layout/drawer_category_item"
                    android:id="@+id/drawer_footwear" />

                <include layout="@layout/drawer_category_item"
                    android:id="@+id/drawer_accessories" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>

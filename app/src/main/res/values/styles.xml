<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Core colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Default Material Button Shape -->
        <item name="materialButtonStyle">@style/OblongButton</item>

        <!-- Custom black outline for TextInputLayouts -->
        <item name="textInputStyle">@style/BlackOutlinedTextInputLayout</item>

        <!-- Custom filter row style -->
        <item name="filterRowStyle">@style/FilterRow</item>
    </style>

    <!-- ðŸ”³ Black Outlined TextInputLayout -->
    <style name="BlackOutlinedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <!-- Box stroke color (normal & focused) -->
        <item name="boxStrokeColor">@android:color/black</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <!-- Hint and icon tint colors -->
        <item name="hintTextColor">@android:color/black</item>
        <item name="startIconTint">@android:color/black</item>
        <item name="endIconTint">@android:color/black</item>
        <!-- Box background -->
        <item name="boxBackgroundColor">@android:color/white</item>
        <!-- Corner radius for rounded look -->
        <item name="boxCornerRadiusTopStart">30dp</item>
        <item name="boxCornerRadiusTopEnd">30dp</item>
        <item name="boxCornerRadiusBottomStart">30dp</item>
        <item name="boxCornerRadiusBottomEnd">30dp</item>
    </style>

    <!-- ðŸ”¹ Chip Style (category buttons like T-shirts, Shorts, etc.) -->
    <style name="Chip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/chip_background</item>
        <item name="android:textColor">#1A1A1A</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">32dp</item>
    </style>

    <!-- ðŸ”¹ Style for filter toggle rows (Season/Occasion/Category) -->
    <style name="FilterRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <!-- ðŸ”¹ Main title text in filter rows -->
    <style name="FilterTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- ðŸ”¹ Selected value text in filter rows -->
    <style name="FilterValueText" parent="FilterTitleText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">end</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">#4A4A4A</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- ðŸ”¹ Filter Option Button -->
    <style name="FilterOptionButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/filter_option_button_bg</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- ðŸ”¹ Oblong Shape Overlay -->
    <style name="ShapeAppearanceOverlay.App.Oblong" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- ðŸ”¹ Oblong Material Button -->
    <style name="OblongButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.Oblong</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- White fill -->
    <solid android:color="@android:color/white" />

    <!-- Thin gray border -->
    <stroke
        android:width="1dp"
        android:color="@android:color/darker_gray" />

    <!-- Size ensures it stays circle -->
    <size
        android:width="50dp"
        android:height="50dp" />

</shape>

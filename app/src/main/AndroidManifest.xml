<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.outpick">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- For Android 13+ (API 33+) -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <!-- For Android <= 32 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />

    <!-- WRITE_EXTERNAL_STORAGE is legacy; include only if you rely on it for older APIs -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28" />

    <!-- Optional: allow apps without camera to still install -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/outpicklogo_foreground"
        android:roundIcon="@mipmap/outpicklogo_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.OutPick"
        tools:targetApi="33">

        <!-- Launcher / entry point -->
        <activity
            android:name=".auth.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- App activities (update exported flags as needed) -->
        <activity android:name=".MainActivity" android:exported="true" />
        <activity android:name=".auth.SignupActivity" android:exported="false" />
        <activity android:name=".closet.ClosetActivity" android:exported="true" />
        <activity android:name=".closet.ClosetDetailActivity" android:exported="true" />
        <activity android:name=".closet.CreateClosetActivity" android:exported="true" />
        <activity android:name=".closet.AddClothesActivity" android:exported="true" />
        <activity android:name=".closet.YourClothesActivity" android:exported="true" />
        <activity android:name=".outfits.CreateOutfitActivity" android:exported="true" />
        <activity android:name=".outfits.OutfitDetailActivity" android:exported="true" />
        <activity android:name=".outfits.OutfitHistoryActivity" android:exported="true" />
        <activity android:name=".outfits.OutfitSuggestionActivity" android:exported="true" />
        <activity android:name=".outfits.FavoritesActivity" android:exported="true" />
        <activity android:name=".common.CategoriesActivity" android:exported="true" />
        <activity android:name=".common.FilterActivity" android:exported="true" />
        <activity android:name=".common.UploadActivity" android:exported="true" />
        <activity android:name=".outfits.TryOnActivity" android:exported="true" />
        <activity android:name=".admin.AdminDashboardActivity" android:exported="true" />
        <activity android:name=".admin.AdminUserListActivity" android:exported="true" />
        <activity android:name=".common.PreviewImageActivity" android:exported="false" />
        <activity android:name=".outfits.ViewOutfitCombinationsActivity" android:exported="false" />
        <activity android:name=".closet.AddItemActivity" android:exported="true" />
        <activity android:name=".outfits.OutfitCreationActivity" android:exported="true" />
        <activity android:name=".closet.ItemsAddingActivity" android:exported="true" />
        <activity android:name=".outfits.OutfitCombinationActivity" android:exported="true" />
        <activity android:name=".common.SpecifyDetailsActivity" android:exported="false" />
        <activity android:name=".outfits.OutfitSuggestionDetailsActivity" android:exported="true" />
        <activity android:name=".admin.AdminAddOutfitActivity" android:exported="true" />
        <activity android:name=".common.ContentBoardActivity" />
        <activity android:name=".common.ContentOutfitsActivity" />
        <activity android:name=".admin.UserEditActivity"/>
        <activity android:name=".common.ActivitySectionActivity" />
        <activity android:name=".admin.UserActivityLogsActivity" />
        <activity android:name=".outfits.SnapshotDetailsActivity" />
        <activity android:name=".closet.YourClothesDetailsActivity" />
        <activity android:name=".common.SuggestionPreviewImageActivity" />
        <activity android:name=".admin.AdminAddOutfitDetailsActivity" />
        <activity android:name=".admin.UserAdminCreateOutfitActivity" />
        <activity android:name=".auth.EditProfileActivity" />
        <activity android:name=".common.SettingActivity" />
        <activity android:name=".auth.ChangePasswordActivity" />
        <activity android:name=".auth.LoginProfileActivity" />



        <!-- NEW: ItemSelectionActivity declaration -->
        <activity
            android:name=".closet.ItemSelectionActivity"
            android:exported="false"
            android:label="@string/title_activity_item_selection"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.OutPick" /><!-- FIXED: Changed to use Theme.OutPick -->
        <!-- END NEW ACTIVITY -->

        <!-- FileProvider for sharing camera files / creating photo URIs -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>
</manifest>
